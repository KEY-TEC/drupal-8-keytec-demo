<div class="stage {{ modifier_class('stage', modifier) }} {{ attributes.class }}"{{ attributes|without('class') }}>
  {% if src != null %}
    {% include "@atoms/image/image.twig" with{"src": src} only %}
  {% else %}
    {% include "@atoms/image/image.twig" with{"img":img} only %}
  {% endif %}
  <div class="stage__layer">
    <div class="row ">
      {% if image != null %}
        <div class="medium-2 show-for-medium align-self-middle columns">
          {% include "@atoms/image/image.twig" with{"img": image} only %}
        </div>
      {% else %}
        <div class="medium-2 show-for-medium align-self-middle columns">
        {% include "@atoms/image/image.twig" with{"src":logo_image} only %}
        </div>
          {% endif %}
      {% if label != null %}
        <div class="medium-7 large-6 small-10 columns">
          {{ label }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
